{
    "go.goroot": "/opt/go/sdk/go",
    "go.gopath": "/root/.go",
    "go.toolsEnvVars": {
        "GOBIN": "/opt/go/bin"
    },
    "go.lintTool": "golangci-lint",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "python.venvPath": "~/.venv",
    "python.terminal.activateEnvironment": false,
    "notebook.formatOnSave.enabled": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.fixAll": "explicit",
        "notebook.source.organizeImports": "explicit"
    },
    "ruff.nativeServer": "on",
    "ruff.lineLength": 119,
    "ruff.lint.select": [
        "C",
        "E",
        "F",
        "W"
    ],
    "clang-format.style": "{IndentWidth: 4, BasedOnStyle: google, AlignConsecutiveAssignments: true, ColumnLimit: 0}",
    "git.ignoredRepositories": [
        "/opt"
    ],
    "projectManager.groupList": true,
    "projectManager.git.maxDepthRecursion": 4,
    "projectManager.git.ignoredFolders": [
        "code-review",
        "github"
    ],
    "projectManager.git.baseFolders": [
        "/data/repos"
    ],
    "editor.bracketPairColorization.enabled": false,
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml",
        "editor.formatOnSave": true
    },
    "evenBetterToml.formatter.indentString": "  ",
    "evenBetterToml.formatter.indentTables": true,
    "evenBetterToml.formatter.indentEntries": true,
    "evenBetterToml.formatter.columnWidth": 119,
    "codingcopilot.enableInlineChat": true,
    "codingcopilot.enableCodelens": false,
    "codingcopilot.commitMessageLanguage": "en",
    "codingcopilot.enableInlineChatShortcutsTip": false
}